<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.qu.qu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <activity
            android:name=".activities.QuestionActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ListQuestionsActivity"
            android:label="@string/title_activity_list_questions"
            android:parentActivityName=".activities.QuestionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qu.qu.activities.QuestionActivity" />
        </activity>
    </application>

</manifest>
